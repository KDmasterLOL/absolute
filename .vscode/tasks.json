{
    "version": "2.0.0",
    "tasks": [{
        "type": "shell",
        "label": "clang++ build active file",
        "command": "/usr/bin/clang++",
        "args": [
            "-std=c++2a",
            "-stdlib=libc++",
            "-I",
            "${workspaceFolder}",
            "-g",
            "${workspaceFolder}/main.cpp",
            "-o",
            "${workspaceFolder}/main",
            "-l",
            "ncurses"
        ],
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": true,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
        },
        "options": {
            "cwd": "${workspaceFolder}"
        },
        "problemMatcher": [
            "$gcc"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        }

    }]
}